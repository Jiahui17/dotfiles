# vim
alias vi='nvim'
alias v='nvim'
alias sv='sudo nvim'


# git 
alias g='git'
alias gs='git status'
alias ga='git add'

# dotfile backup
alias config='/usr/bin/env git --git-dir=$HOME/.config/dotfiles --work-tree=$HOME'

# tmux
# attaches tmux to the last session; creates a new session if none exists.
alias t='tmux attach &> /dev/null || tmux new-session'

# attaches tmux to a session (example: ta portal)
alias ta='tmux attach -t'

# creates a new session
alias tn='tmux new-session'

# lists all ongoing sessions
alias tl='tmux list-sessions'

# detach tmux from current session
alias td='tmux detach'

alias q='exit'

alias ..='cd ..'
alias ...='cd ../..'

# python alias
#
alias activate='source ./.venv/bin/activate'

# ls
alias l='ls -1 -hN --color=auto --group-directories-first'
alias ll='ls -alF'
alias la='ls -A'
alias ls='ls -1 -hN --color=auto --group-directories-first'

# make file utilities more verbose
alias mv='mv -iv'
alias cp='cp -iv'
alias rm='rm -vI'
alias grep='grep --color=auto'
alias r='ranger --choosedir=$HOME/.cache/ranger/rangerdir; LASTDIR=`cat $HOME/.cache/ranger/rangerdir`; cd "$LASTDIR"'
alias zip='zip -x "*/.*" -x "*/sim/HLS_VERIFY/work/*" -x "*/sim/*_SRC/*" -x "*/sim/*_OUT/*" -x "*/sim/INPUT_VECTORS/*"' # by default not zipping hidden files
alias sh='bash'
alias xo='xdg-open .'

# remote servers
