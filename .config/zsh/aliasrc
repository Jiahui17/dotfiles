alias eda4='ssh jiahxu@ee-tik-eda4.ethz.ch'
alias lagrev1='ssh jiahxu@lagrev1.ethz.ch'
alias lagrev2='ssh jiahxu@lagrev2.ethz.ch'
alias lagrev3='ssh jiahxu@lagrev3.ethz.ch'
alias lagrev4='ssh jiahxu@lagrev4.ethz.ch'
alias shutdown='shutdown now'
alias jg='cds_jasper-22.09.001 jg'

alias wget="wget --hsts-file=$XDG_CACHE_HOME/wget-hsts"
alias mutt='mkdir -p ~/Mail/Attachments; cd ~/Mail/Attachments && mutt'
alias top='htop -M --readonly'
alias clock='tty-clock -c -C 2 -s'

alias tikvpn='sudo openconnect https://sslvpn.ethz.ch/ee-tik -u jiahxu@ee-tik.ethz.ch' 
